/* pages/list/list.wxss */
.categoryList{
  width: 750rpx;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}
.scroll-view{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-between;
}
.items{
  width: 48%;
  height: 450rpx;
  font-size: 12px;
  color: rgba(32, 29, 29, 0.822);
}
.itemImg{
  width: 100%;
  height: 70%;
}
.prodTitle{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.nowPrice{
  color: #5781d0;
  font-size: 14px;
}
.originPrice{
  margin-left: 5px;
  text-decoration: line-through;
  color: grey;
}